<div class="site-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="row">
                    <div class="col-12">
                        <div class="section-title">
                            <h2>Editor's Pick</h2>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="post-entry-1">
                            <% if(articles && articles.status === "ok") { %>
                                <% articles.articles.forEach(function(article, index) { %>
                                    <% if (index < 1) { %>
                                        <a href="post-single.html"><img src="<%= article.urlToImage %>" alt="Image" class="img-fluid"></a>
                                        <h2>
                                            <a href="/post-single">
                                                <%= article.title %>
                                            </a>
                                        </h2>
                                        <p>
                                            <%= article.description %>
                                        </p>
                                        <div class="post-meta">
                                            <span class="d-block"><a href="#">Dave Rogers</a> in <a href="#">News</a></span>
                                            <span class="date-read"><%= article.timeToRead %> <span class="mx-1">&bullet;</span>
                                            <%= article.timeToRead %> <span class="icon-star2"></span></span>
                                        </div>
                                        <% } %>
                                            <% }); %>
                                                <% } %>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <% if(articles && articles.status === "ok") { %>
                            <% articles.articles.forEach(function(article, index) { %>
                                <% if (index < 4) { %>
                                    <div class="post-entry-2 d-flex bg-light">
                                        <div class="thumbnail" style="background-image: url('<%= article.urlToImage %>')"></div>
                                        <div class="contents">
                                            <h2>
                                                <a href="blog-single.html">
                                                    <%= article.title %>
                                                </a>
                                            </h2>
                                            <div class="post-meta">
                                                <span class="d-block"><a href="#"><%= article.author %></a> in <a href="#">News</a></span>
                                                <span class="date-read"><%= article.publishedAt %> <span class="mx-1">â€¢</span>
                                                <%= article.timeToRead %> <span class="icon-star2"></span></span>
                                            </div>
                                        </div>
                                    </div>
                                    <% } %>
                                        <% }); %>
                                            <% } %>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="section-title">
                    <h2>Trending</h2>
                </div>
                <% if(articles && articles.status === "ok") { %>
                    <% articles.articles.forEach(function(article, index) { %>
                        <% if (index < 3) { %>
                            <div class="trend-entry d-flex">
                                <div class="number align-self-start">01</div>
                                <div class="trend-contents">
                                    <h2>
                                        <a href="blog-single.html">
                                            <%= article.title %>
                                        </a>
                                    </h2>
                                    <div class="post-meta">
                                        <span class="d-block"><a href="#"><%= article.author %></a> in <a href="#">News</a></span>
                                        <span class="date-read"><%= article.date %> <span class="mx-1">&bullet;</span>
                                        <%= article.publishedAt %> <span class="icon-star2"></span></span>
                                    </div>
                                </div>
                            </div>
                            <% } %>
                                <% }); %>
                                    <% } %>
                                        <p>
                                            <a href="/global" class="more">See All Trends <span class="icon-keyboard_arrow_right"></span></a>
                                        </p>
            </div>
        </div>
    </div>
</div>